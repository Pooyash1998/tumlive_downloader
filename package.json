{
  "name": "tum-live-downloader",
  "version": "1.0.0",
  "description": "TUM Live Video Downloader with modern UI",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"python backend/server.py\" \"wait-on http://127.0.0.1:5001/health && electron . --dev\"",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.tumlive.downloader",
    "productName": "TUM Live Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/**/*",
      "*.py",
      "*.yml",
      "node_modules/**/*"
    ]
  }
}